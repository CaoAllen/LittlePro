<view class="weui-cells__title">摆摊大小</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">当前选择</view>
    </view>
    <view class="weui-cell__bd">
      <picker bindchange="bindStallSizeChange" value="{{stallSizeIndex}}" range="{{stallSizeArray}}">
        <view class="weui-input">{{stallSizeArray[stallSizeIndex]}}</view>
      </picker>
    </view>
  </view>
</view>

<view class="weui-cells__title">时间单位</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">当前选择</view>
    </view>
    <view class="weui-cell__bd">
      <picker bindchange="bindTimeUnitChange" value="{{timeUnitIndex}}" range="{{timeUnitArray}}">
        <view class="weui-input">{{timeUnitArray[timeUnitIndex]}}</view>
      </picker>
    </view>
  </view>
</view>

<view class="weui-cells__title">选择日期</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">当前选择</view>
    </view>
    <view class="weui-cell__bd">
      <picker mode="date" value="{{date}}" start="{{startDate}}" end="{{endDate}}" bindchange="bindDateChange">
        <view class="weui-input">{{date}}</view>
      </picker>
    </view>
  </view>
</view>

<view class="carts-footer">
  <view bindtap="clickOk" class="button ok">确定</view>
</view>
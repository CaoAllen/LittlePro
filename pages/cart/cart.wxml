<!--要是够车内没有数据，就行显示没有数据-->
<view class="cart" hidden="{{iscart}}">
  <image src="/images/cart.png" />
  <view>购物车里空空如也，快去场地和活动看看吧</view>
</view>
<!--要是有数据，就显示数据-->
<view class="cartList" hidden="{{!iscart}}">
  <!--header-->
  <view class="baoyou"></view>
  <!--list item-->
  <block wx:for="{{cart}}">
    <view class="goods">
      <!--左侧图片-->
      <view>
        <image src="{{item.imgUrl}}" class="good-img" />
      </view>
      <!--右侧说明部分-->
      <view class="good-cont">
        <!--文字说明-->
        <view class="goods-navigator">
          <view class="good-name">{{item.name}}</view>
          <view class="btn-box">
            <image id="img{{index}}" src="/images/del2.png" bindtap="delGoods" />
          </view>
        </view>
        <!--价钱和购物加减的父盒子-->
        <view class="good-price">
          <text class="price">￥{{item.price}}</text>
        </view>
      </view>
    </view>
  </block>
  <!--footer-->
  <view class="total">
    <view class="total_text">合计：
      <text>￥{{total}}</text>
    </view>
    <button class="total_js" size="mini">去结算({{goodsCount}})</button>
  </view>
</view>